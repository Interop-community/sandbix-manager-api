<settings>
  <mirrors>
    <mirror>
      <id>hspc-nexus</id>
      <name>HSPC Nexus</name>
      <mirrorOf>*</mirrorOf>
      <url>https://nexus.hspconsortium.org/repository/maven-all/</url>
    </mirror>
  </mirrors>
  <servers>
    <server>
      <id>hspc-nexus</id>
      <username>${env.NEXUS_USR}</username>
      <password>${env.NEXUS_PWD}</password>
    </server>
    <server>
      <id>hspc-releases</id>
      <username>${env.NEXUS_USR}</username>
      <password>${env.NEXUS_PWD}</password>
    </server>
    <server>
      <id>hspc-snapshots</id>
      <username>${env.NEXUS_USR}</username>
      <password>${env.NEXUS_PWD}</password>
    </server>
  </servers>
</settings>